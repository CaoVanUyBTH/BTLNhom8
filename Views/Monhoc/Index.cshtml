@model IEnumerable<BTLNhom8.Models.Monhoc>

@{
    ViewData["Title"] = "Index";
}

<h1>Môn Học</h1>

<p>
    <a asp-action="Create">Thêm môn học</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ma_mon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten_mon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ma_mon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten_mon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Ma_mon">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Ma_mon">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Ma_mon">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
